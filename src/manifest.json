{
  "manifest_version": 3,
  "name": "Water Reminder",
  "version": "0.1.0",
  "description": "Remind you to drink water and hit your daily hydration goal.",
  "permissions": ["storage", "notifications", "alarms"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
